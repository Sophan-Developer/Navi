{
    "compilerOptions": {
        "strict": false,
        "outDir": "dist",
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "rootDir": "src",
        "useUnknownInCatchVariables": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "skipLibCheck": true,
        "importHelpers": true,
        "typeRoots": [
            "node_modules/@types",
        ],
        "sourceMap": true,
    },
    "include": [
        "src/**/*",
        "src/assets/**/*",
    ],
    "exclude": [
        "/.github",
        "./dist",
        "./node_modules",
        "src/types"
    ]
}